function  calculateAge(a,b) {
 
  if (b-a===1) return "You are 1 year old.";
  if (b-a===-1) return "You will be born in 1 year.";
  if ((b-a)<0) return `You will be born in ${a-b} years.`;
   if ((b-a)>0) return `You are ${b-a} years old.`;
  if (a===b) return "You were born this very year!"
}

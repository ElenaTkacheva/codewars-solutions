function perfectRoots(n){
  const a = Math.sqrt(n);
  const b = Math.sqrt(a);
  const c = Math.sqrt(b);
  return Math.round(c) == c;
}

//or

function perfectRoots(n){
if ((n**(1/2))%1===0 && (n**(1/4))%1===0 && (n**(1/8))%1===0) return true;
  return false;
}
